<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.pennapps.xpresscart.MerchantActivity">

    <TextView
        android:id="@+id/merchant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:text="Your Merchant is:"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:id="@+id/merchant_photo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/wgreens"
        android:layout_below="@+id/merchant"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/merchant_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:text="Walgreens"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/merchant_photo"/>
    <TextView
        android:id="@+id/cart_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/merchant_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Cart ID:         "/>



</RelativeLayout>
